# Environment variables
# Copy this file to .env and update with your actual values

# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/mediacareers

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRE=90d

# OpenAI Configuration (for AI features)
OPENAI_API_KEY=your_openai_api_key_here

# Email Configuration (for welcome emails)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=noreply@mediacareers.in

# UPI Payment Configuration
UPI_ID=info@phildass.com
UPI_NAME=MediaCareers

# Application Configuration
APP_URL=http://localhost:3000
PREMIUM_PRICE=199
PREMIUM_DURATION_MONTHS=3
FREE_MEMBERSHIP_EXPERIENCE_MONTHS=12

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=.pdf,.doc,.docx

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
